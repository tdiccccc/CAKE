<div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h4 class="p-3 mb-2 bg-light text-dark">商品編集</h4>
    <%= form_with model: [:admin,@item] do |f| %>
    <table>
      <tbody>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name)%></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <label><%= f.radio_button :is_active, "sale" %>販売中</label>
            <label><%= f.radio_button :is_active, "stop" %>販売停止中</label>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
    <%end%>
  </div>
</div>
