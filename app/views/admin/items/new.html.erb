<h1>商品新規登録</h1>

<%= form_with model: @item do |f| %>
<table>
  <tbody>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_field :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td></td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
  </tbody>
</table>
<%end%>