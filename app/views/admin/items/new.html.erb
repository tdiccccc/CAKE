<h1>商品新規登録</h1>

<%= form_with model: @item.id do |f| %>
<table>
  <tbody>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%#= f.select :genre_id,%></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.text_field :price %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </tbody>
</table>
<%end%>